{% extends 'parts/base.twig' %}
{% block body %}
    <h1>Форма регистрации</h1>
    {% if message is not null %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endif %}
    <form method="post" action="/register-post">
        <div class="form-ground">
            <label for="surname">Фамилия</label>
            <input type="text" name="surname" class="form-control" id="surname" value="{{ form ? form.surname}}" />
            <small  class="form-text">Поле заполняется кириллицей</small>
        </div>

        <div class="form-ground">
            <label for="name">Имя</label>
            <input type="text" name="name" class="form-control" id="name" value="{{ form ? form.name}}" />
            <small  class="form-text">Поле заполняется кириллицей</small>
        </div>

        <div class="form-ground">
            <label for="middle_name">Отчество (без отчества <input style="vertical-align: middle;" type="checkbox" name="check-mid-name" id="check_mid_name" onclick="textBlock()" value="yes"> )</label>
            <input type="text" name="middle-name" class="form-control" id="middle_name" value="{{ form ? form['middle-name']}}" />
            <small  class="form-text">Поле заполняется кириллицей</small>
        </div>

        <div class="form-ground">
            <label for="username">Идентификатор</label>
            <input type="text" name="username" class="form-control" id="username" value="{{ form ? form.username}}" />
        </div>

        <div class="form-ground">
            <label for="email">Электронная почта</label>
            <input type="email" name="email" class="form-control" id="email"  aria-describedby="emailHelp" value="{{ form ? form.email }}" />
            <small id="emailHelp" class="form-text text-muted"></small>
        </div>

        <div class="form-ground">
            <label for="password">Пароль</label>
            <input type="password" name="password" class="form-control" id="password" value="" />
            <small id="passHelp" class="form-text">Пароль должен состоять из восьми или более символов латинского алфавита, содержать заглавные и строчные буквы, цифры, специальные символы</small>
        </div>

        <div class="form-ground">
            <label for="confirm_password">Подтверждение пароля</label>
            <input type="password" name="confirm-password" class="form-control" id="confirm_password" value="" />
        </div>
        <p></p>
        <label for="check_reg">Я даю свое согласие на обработку персональных данных <input style="vertical-align: middle;" type="checkbox" name="check_reg" id="check_reg" value="yes"></label>
        <p></p>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    </form>
{% endblock %}